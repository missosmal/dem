<Page x:Class="dem.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="White">
        <Label Content="Все заявки" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="20"/>
        <TextBox x:Name="search" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,15,0,0" Height="25" Width="400" TextChanged="searchTBChange"/>
        <Button Content="Статистика" Click="statusClick" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,10,0" Height="25" Width="100"/>
        <ScrollViewer Margin="10,50,10,50">
            <StackPanel x:Name="parent"/>
        </ScrollViewer>
        <Button Content="Добавить" Click="addClick" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="25" Width="100"/>
    </Grid>
</Page>
