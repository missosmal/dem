<Page x:Class="dem.Pages.Status"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Status">

    <Grid Background="White">
        <Label Content="Статистика" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="20"/>
        <Button Content="Назад" Click="backPage" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,10,0" Height="25" Width="100"/>
        <Label x:Name="status" Content="Статистика выполненых заявок: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" FontSize="16"/>
        <Label x:Name="avgTime" Content="Среднее время выполнения заявки: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" FontSize="16"/>
        <Label x:Name="typeDefect" Content="Типы поломок: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" FontSize="16"/>
        <ListBox x:Name="list" Margin="10,130,550,10"/>
    </Grid>
</Page>
